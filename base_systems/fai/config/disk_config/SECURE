# example of new config file for setup-storage
#
# <type> <mountpoint> <size>   <fs type> <mount options> <misc options>

disk_config sda bootable:1
primary  /boot         250	  ext3   rw
primary  -            9472-       -      -
 
disk_config lvm
vg vg0                 sda2
vg0-swap               swap          2048    swap   sw                   
vg0-root               /              768    ext3   rw,errors=remount-ro
vg0-home               /home:encrypt  256    ext3   rw                  
vg0-tmp                /tmp:encrypt  1024    ext3   rw                  
vg0-usr                /usr:encrypt  4096    ext3   rw                   
vg0-var                /var:encrypt  1024    ext3   rw                   
vg0-opt                /opt:encrypt   256-   ext3   rw                   
