/bin/cat <<EOASL> /etc/apt/sources.list
deb http://www.backports.org/debian/ etch-backports main
deb http://ftp.us.debian.org/debian/ stable main non-free 

deb-src http://www.backports.org/debian/ etch-backports main
deb-src http://ftp.us.debian.org/debian/ stable main  

deb http://security.debian.org/ stable/updates main non-free
EOASL

/bin/cat <<EOAP>> /etc/apt/preferences
Package: *
Pin: release a=etch-backports
Pin-Priority: 200

Package: libfuse2
Pin: release a=etch-backports
Pin-Priority: 999

Package: libfuse-dev
Pin: release a=etch-backports
Pin-Priority: 999

Package: fuse-utils
Pin: release a=etch-backports
Pin-Priority: 999

Package: git-arch
Pin: release a=etch-backports
Pin-Priority: 999

Package: git-core
Pin: release a=etch-backports
Pin-Priority: 999

Package: git-cvs
Pin: release a=etch-backports
Pin-Priority: 999

Package: git-email
Pin: release a=etch-backports
Pin-Priority: 999

Package: git-daemon-run
Pin: release a=etch-backports
Pin-Priority: 999

Package: gitk
Pin: release a=etch-backports
Pin-Priority: 999

Package: gitweb
Pin: release a=etch-backports
Pin-Priority: 999
EOAP

apt-get -y --force-yes update && -y --force-yes apt-get upgrade
apt-get remove  git-arch git-cvs git-email git-daemon-run gitk gitweb cogito
apt-get install git-arch git-cvs git-email git-daemon-run gitk gitweb git-core

